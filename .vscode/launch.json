{
  "version": "0.2.0",
  "configurations": [
    {
      // ▶ F5: Debug UI tests on QA in Chrome, show the browser (HEADLESS=false)
      "name": "Debug UiTests (QA, Chrome, @realapp tag)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "test",
        "UiTests",
        "--no-build",
        "--configuration", "Debug",
        "--filter", "Category=realapp"   // ⬅️ change to your tag or use DisplayName~YourScenario
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "TEST_ENVIRONMENT": "qa",
        "BROWSER": "chrome",
        "HEADLESS": "false"              // set to "true" to run headless
      }
    },
    {
      // Example: Debug a single scenario by name (uses contains-match)
      "name": "Debug UiTests (QA, Chrome, scenario by name)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "test",
        "UiTests",
        "--no-build",
        "--configuration", "Debug",
        "--filter", "DisplayName~Successful login"  // ⬅️ substring of your scenario title
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "TEST_ENVIRONMENT": "qa",
        "BROWSER": "chrome",
        "HEADLESS": "false"
      }
    },
    {
      // Optional: Firefox profile for quick switching
      "name": "Debug UiTests (QA, Firefox, @realapp)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "test",
        "UiTests",
        "--no-build",
        "--configuration", "Debug",
        "--filter", "Category=realapp"
      ],
      "envFile": "${workspaceFolder}/Common/.env" ,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "TEST_ENVIRONMENT": "qa",
        "BROWSER": "firefox",
        "HEADLESS": "false"
      }
    }
  ]
}
